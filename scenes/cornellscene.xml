<rt-scene>

<camera>
    <eye    vector3="0.0 1.0 4.5" />
    <lookat vector3="0.0 1.0 0.0" />
    <up     vector3="0.0 -1.0 0.0" />
    <fov    angle="50 deg" />
</camera>

<image>
    <width float="1200" />
    <height float="1200" />
    <bgcolor color="0.5 0.5 0.5" />
</image>

<materials>
    <simplemat id="diffuse-white">
        <diffuse color=".75 .75 .75" />
        <specular color="0.0 0.0 0.0" />
        <reflect color="0.0 0.0 0.0" />
        <transmit color="0.0 0.0 0.0" />
        <eta float="0.0"/>
        <n float="0"/>
        <isreflect bool="false"/>
        <istransmit bool="false"/>
    </simplemat>
    <simplemat id="diffuse-red">
        <diffuse color=".75 .25 .25" />
        <specular color="0.0 0.0 0.0" />
        <reflect color="0.0 0.0 0.0" />
        <transmit color="0.0 0.0 0.0" />
        <eta float="0.0"/>
        <n float="0"/>
        <isreflect bool="false"/>
        <istransmit bool="false"/>
    </simplemat>
    <simplemat id="diffuse-blue">
        <diffuse color=".25 .25 .75" />
        <specular color="0.0 0.0 0.0" />
        <reflect color="0.0 0.0 0.0" />
        <transmit color="0.0 0.0 0.0" />
        <eta float="0.0"/>
        <n float="0"/>
        <isreflect bool="false"/>
        <istransmit bool="false"/>
    </simplemat>
    <simplemat id="diffuse-black">
        <diffuse color="0.0 0.0 0.0" />
        <specular color="0.0 0.0 0.0" />
        <reflect color="0.0 0.0 0.0" />
        <transmit color="0.0 0.0 0.0" />
        <eta float="0.0"/>
        <n float="0"/>
        <isreflect bool="false"/>
        <istransmit bool="false"/>
    </simplemat>

    <simplemat id="metal">
        <diffuse color="0.1 0.1 0.1" />
        <specular color="0.2 0.2 0.2" />
        <reflect color="1.0 1.0 1.0" />
        <transmit color="0.0 0.0 0.0" />
        <eta float="0.0"/>
        <n float="100" />
        <isreflect bool="true"/>
        <istransmit bool="false"/>
    </simplemat>

    <simplemat id="glass">
        <diffuse color="0.0 0.0 0.0" />
        <specular color="0.9 0.9 0.9" />
        <reflect color="0.05 0.05 0.05" />
        <transmit color="0.95 0.95 0.95" />
        <eta float="1.5"/>
        <n float="100" />
        <isreflect bool="true"/>
        <istransmit bool="true"/>
    </simplemat>
</materials>

<objects>
    <sphere material="metal">
        <center vector3="0.8 0.0 -3.0" />
        <radius float="0.6" />
    </sphere>
    <sphere material="glass">
        <center vector3="-0.8 0.0 -2.0" />
        <radius float="0.6" />
    </sphere>

    <!-- back -->
    <sphere material="diffuse-white">
        <center vector3="0.0 -1000.6 0.0" />
        <radius float="1000" />
    </sphere>

    <!-- top -->
    <sphere material="diffuse-white">
        <center vector3="0.0 1002.6 0.0" />
        <radius float="1000" />
    </sphere>

    <!-- back -->
    <sphere material="diffuse-black">
        <center vector3="0.0 0.0 1004.6" />
        <radius float="1000" />
    </sphere>

    <!-- front -->
    <sphere material="diffuse-white">
        <center vector3="0.0 0.0 -1005.0" />
        <radius float="1000" />
    </sphere>

    <!-- left -->
    <sphere material="diffuse-red">
        <center vector3="1001.8 0.0 0.0" />
        <radius float="1000" />
    </sphere>

    <!-- right -->
    <sphere material="diffuse-blue">
        <center vector3="-1001.8 0.0 0.0" />
        <radius float="1000" />
    </sphere>

</objects>

<lights>
    <arealight>
        <center vector3="0.0 2.59 -1.5" />
        <normal vector3="0.0 -1.0 0.0" />
        <radius vector3="0.0 0.0 0.7" />
        <color color="1.0 1.0 1.0" />
        <ka float="0.6" />
    </arealight>
</lights>

<integrator>
    <path>
        <depth-of-recursion int="50" />
        <samples-per-pixel int="1" />
    </path>
</integrator>


</rt-scene>